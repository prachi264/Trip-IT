<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hotelsbackground"
    tools:context=".Hotel_Success">


    <TextView
        android:id="@+id/txt_succes"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginTop="70dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="Booking SuccessFull!!"
        android:textColor="#2c5e36"
        android:textSize="40sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/img_success"
        android:layout_width="224dp"
        android:layout_height="100dp"
        android:layout_below="@+id/txt_succes"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="87dp"
        android:foregroundGravity="center"
        android:src="@drawable/tick" />
    <TextView

        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="hello"
        android:textColor="@color/white"
        android:layout_below="@+id/img_success"
        android:layout_marginTop="30dp"

        />

</RelativeLayout>